<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="ack_cliente_tree_view" model="ir.ui.view">
        <field name="name">ack.cliente.tree</field>
        <field name="model">ack.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="ack_cliente_form_view" model="ir.ui.view">
        <field name="name">ack.cliente.form</field>
        <field name="model">ack.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
