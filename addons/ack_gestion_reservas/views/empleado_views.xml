<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="ack_empleado_tree_view" model="ir.ui.view">
        <field name="name">ack.empleado.tree</field>
        <field name="model">ack.empleado</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="role"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="ack_empleado_form_view" model="ir.ui.view">
        <field name="name">ack.empleado.form</field>
        <field name="model">ack.empleado</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="role"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
