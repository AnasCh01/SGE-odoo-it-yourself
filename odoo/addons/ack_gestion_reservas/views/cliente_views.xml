<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree -->
    <record id="ack_cliente_tree" model="ir.ui.view">
        <field name="name">ack.cliente.tree</field>
        <field name="model">ack.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="ack_cliente_form" model="ir.ui.view">
        <field name="name">ack.cliente.form</field>
        <field name="model">ack.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="image_1920" widget="image"/>
                    </group>

                    <notebook>
                        <page string="Reservas">
                            <field name="reserva_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="servicio_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="ack_cliente_action" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">ack.cliente</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
