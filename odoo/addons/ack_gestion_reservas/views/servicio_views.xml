<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="ack_servicio_tree_view" model="ir.ui.view">
        <field name="name">ack.servicio.tree</field>
        <field name="model">ack.servicio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="ack_servicio_form_view" model="ir.ui.view">
        <field name="name">ack.servicio.form</field>
        <field name="model">ack.servicio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="duration"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
