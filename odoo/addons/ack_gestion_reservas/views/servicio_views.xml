<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree -->
    <record id="ack_servicio_tree" model="ir.ui.view">
        <field name="name">ack.servicio.tree</field>
        <field name="model">ack.servicio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="ack_servicio_form" model="ir.ui.view">
        <field name="name">ack.servicio.form</field>
        <field name="model">ack.servicio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="duration"/>
                        <field name="active"/>
                        <field name="image_1920" widget="image"/>
                    </group>

                    <group string="Empleados">
                        <field name="empleado_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
