<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="ack_reserva_tree_view" model="ir.ui.view">
        <field name="name">ack.reserva.tree</field>
        <field name="model">ack.reserva</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="cliente_id"/>
                <field name="servicio_id"/>
                <field name="empleado_id"/>
                <field name="state"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="view_ack_reserva_kanban" model="ir.ui.view">
    <field name="name">ack.reserva.kanban</field>
    <field name="model">ack.reserva</field>
    <field name="arch" type="xml">
        <kanban default_group_by="state">
            <field name="state"/>
            <field name="cliente_id"/>
            <field name="servicio_id"/>
            <field name="date"/>
            <field name="price"/>

            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_card">
                        <div class="o_kanban_header">
                            <strong>
                                <field name="cliente_id"/>
                            </strong>
                        </div>

                        <div class="o_kanban_details">
                            <div>
                                <b>Servicio:</b>
                                <field name="servicio_id"/>
                            </div>
                            <div>
                                <b>Fecha:</b>
                                <field name="date"/>
                            </div>
                            <div>
                                <b>Precio:</b>
                                <field name="price"/>
                            </div>
                        </div>

                        <div class="o_kanban_footer">
                            <span class="badge">
                                <field name="state"/>
                            </span>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Vista Form -->
    <record id="ack_reserva_form_view" model="ir.ui.view">
        <field name="name">ack.reserva.form</field>
        <field name="model">ack.reserva</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="state"/>
                    </group>

                    <group>
                        <field name="cliente_id"/>
                        <field name="servicio_id"/>
                        <field name="empleado_id"/>
                        <field name="price" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <!-- Vista Calendario -->
    <record id="ack_reserva_calendar_view" model="ir.ui.view">
        <field name="name">ack.reserva.calendar</field>
        <field name="model">ack.reserva</field>
        <field name="arch" type="xml">
            <calendar
                string="Reservas"
                date_start="date"
                color="state"
            >
                <field name="cliente_id"/>
                <field name="servicio_id"/>
                <field name="empleado_id"/>
            </calendar>
        </field>
    </record>


</odoo>
