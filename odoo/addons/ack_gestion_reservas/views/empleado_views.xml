<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Tree -->
    <record id="ack_empleado_tree_view" model="ir.ui.view">
        <field name="name">ack_gestion_reservas.empleado.tree</field>
        <field name="model">ack_gestion_reservas.empleado</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="role"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="ack_empleado_form_view" model="ir.ui.view">
        <field name="name">ack_gestion_reservas.empleado.form</field>
        <field name="model">ack_gestion_reservas.empleado</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="role"/>
                        <field name="service_ids" widget="many2many_tags"/>
                    </group>

                    <!-- TREE ANIDADO -->
                    <notebook>
                        <page string="Reservas">
                            <field name="reservation_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="cliente_id"/>
                                    <field name="servicio_id"/>
                                    <field name="state"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
